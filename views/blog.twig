{% extends "base.twig" %}

{% block content %}
<h1>Posts</h1>
<ul>
    {% for post in posts %}
    <li>
        <h2><a href="/blog/view?id={{ post.id }}">{{ post.title }}</a></h2>
        <p>{{ post.content | slice(0, 150) }}...</p>
        <small>Posted on: {{ post.created_at }}</small>
    </li>
    {% endfor %}
</ul>
{% endblock %}